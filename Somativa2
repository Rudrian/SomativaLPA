package avaliaçãolpa;

import java.util.Scanner;

public class avalia2 {

	public static void main(String[] args) {
		Scanner ler = new Scanner(System.in);
        
		double A = 0, b, h;
		
		System.out.print("Informe um valor: ");
		b = ler.nextDouble();
		
		System.out.print("Informe outro valor valor: ");
		h = ler.nextDouble();
		
		A = b*h/2;
		
		System.out.print("A area calculada é: " + A);
		
	}

}
